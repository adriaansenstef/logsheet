<core:FragmentDefinition xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" 
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
    <VBox>
        <f:Form>
            <f:layout>
                <f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="3"
					columnsL="3"
					columnsM="2"
					singleContainerFullSize="false"/>
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="{i18n>OrderDetail.OrderNumber}">
                            <f:fields>
                                <Text text="{order>/order/orderNumber}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>OrderDetail.Description}">
                            <f:fields>
                                <Text text="{order>/order/description}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>OrderDetail.FunctionalLocation}">
                            <f:fields>
                                <Text text="{order>/order/technicalObject} - {order>/order/technicalObjectDescription}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>OrderDetail.Equipment}">
                            <f:fields>
                                <Text text="{order>/order/equipmentNumber} - {order>/order/equipmentDescription}"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="{i18n>OrderDetail.DueDate}">
                            <f:fields>
                                <Text text="{path:'order>/order/finishDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy HH:mm', UTC: true } }"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>OrderDetail.Duration}">
                            <f:fields>
                                <Text text="{order>/order/duration} {i18n>OrderDetail.Hour}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>OrderDetail.SystemStatus}">
                            <f:fields>
                                <Text text="{order>/order/systemStatus}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>OrderDetail.UserStatus}">
                            <f:fields>
                                <Select id="statusSelect" items="{path: 'order>/order/userStatus'}" selectedKey="{order>/order/userStatus}" change="onSelectedUserStatusChange">
                                    <core:Item key="{order>/order/userStatus}" text="{order>/order/userStatus}"/>
                                </Select>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>OrderDetail.Person}">
                            <f:fields>
                                <Select id="personSelect" items="{path: 'order>/order/responsiblePerson'}" selectedKey="{order>/order/responsiblePerson}" change="onSelectedResponsiblePersonChange">
                                    <core:Item key="{order>/order/responsiblePerson}" text="{order>/order/rpFirstName} {order>/order/rpLastName}"/>
                                </Select>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement>
                            <f:fields>
                                <TextArea value="{order>/order/description}" editable="false" rows="4" growing="true" growingMaxLines="10"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>
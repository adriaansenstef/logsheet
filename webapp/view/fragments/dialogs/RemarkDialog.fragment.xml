<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>OrderDetail.EditRemark}" type="Message" contentWidth="100%">
        <content>
            <l:VerticalLayout width="100%">
                <TextArea value="{order>/order/longText}" rows="10" growing="true" growingMaxLines="20" width="100%"/>
            </l:VerticalLayout>
        </content>
        <buttons>
            <Button text="{i18n>General.Close}" press="onRemarkClose"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:me="pro.dimensys.pm.logsheet.controls">
    <Dialog>
        <content>
            <Table id="measurementsTable" items="{order>measurements}">
                <columns>
                    <Column>
                        <Text text="{i18n>MeasurementTable.Point}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>MeasurementTable.Description}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>MeasurementTable.Value}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>MeasurementTable.Unit}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>MeasurementTable.LastValue}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>MeasurementTable.Date}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{order>point}" />
                            <Text text="{order>description}" />
                            <Input value="{parts: [{path: 'order>value'}, {path: 'order>decimals'}], type: '.formatter.decimalFormatter' }" type="Number" editable="{viewModel>/edit}" />
                            <Text text="{order>unit}" />
                            <Text text="{order>lastValue}" />
                            <Text text="{path: 'order>addedDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' } }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <buttons>
            <Button text="{i18n>General.Close}" press="onMeasurePointClose" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
	<Page>
		<!-- use this to make the table occupy the available screen height -->
		<VBox fitContainer="true">
			<SmartFilterBar id="smartFilterBar" entitySet="OrderSet" persistencyKey="SmartFilter_Explored" basicSearchFieldName="Description" enableBasicSearch="true">
				<controlConfiguration>
					<ControlConfiguration key="Bukrs">
						<defaultFilterValues>
							<SelectOption low="0001"></SelectOption>
						</defaultFilterValues>
					</ControlConfiguration>
					<ControlConfiguration key="Gjahr">
						<defaultFilterValues>
							<SelectOption low="2014"></SelectOption>
						</defaultFilterValues>
					</ControlConfiguration>
				</controlConfiguration>
				<!-- layout data used to make the table growing but the filter bar fixed -->
				<layoutData>
					<FlexItemData shrinkFactor="0" />
				</layoutData>
			</SmartFilterBar>
			<SmartTable id="OrderSmartTable" entitySet="OrderSet" smartFilterId="smartFilterBar" tableType="Table" useExportToExcel="true" beforeExport="onBeforeExport" useVariantManagement="true" useTablePersonalisation="true" showRowCount="true" persistencyKey="SmartTableAnalytical_Explored" enableAutoBinding="true" class="sapUiResponsiveContentPadding" enableAutoColumnWidth="true" editTogglable="true">
				<!-- layout data used to make the table growing but the filter bar fixed -->
				<layoutData>
					<FlexItemData growFactor="1" baseSize="0%" />
				</layoutData>
			</SmartTable>
		</VBox>
	</Page>

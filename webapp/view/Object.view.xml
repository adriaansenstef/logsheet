<mvc:View controllerName="pro.dimensys.pm.logsheet.controller.Object" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Page title="{order>/order/orderNumber}" class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer">
		<headerContent></headerContent>
		<content>
			<VBox>
				<IconTabBar items="{order>/order/phases}" expandable="false" select="onPhaseSelect" class="sapUiResponsivePadding--header sapUiResponsivePadding--content">
					<items>
						<IconTabFilter text="{order>description}" key="{order>phaseId}">
							<Table items="{order>operations}">
								<columns>
									<Column width="12em">
										<Text text="Operation" />
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<ObjectIdentifier title="{order>operationNumber}" text="{order>description}" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</IconTabFilter>
					</items>
				</IconTabBar>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer />
				<Button text="{i18n>General.Save}" type="Accept" />
				<Button text="{i18n>General.Cancel}" type="Reject" />
			</OverflowToolbar>
		</footer>
	</Page>

</mvc:View>